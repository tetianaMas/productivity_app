<section id="js-modal-window" aria-labelledby="modal dialog" aria-modal="true">
    <div class="overlay"></div>
    <div class="modal">

      <div class="modal__control">
        <button class="modal__control__button js-modal-close-btn">
          <span class="icon-close "></span>
        </button>
      </div>

      <h1 class="modal__title">Remove task</h1>

      <div class="modal__message">
        <p>Are you sure you want to remove selected task(s)?</p>
      </div>

      <div class="modal__actions">
        <button class="modal__actions__button modal__actions__button--blue js-remove-task-cancel">Cancel</button>
        <button class="modal__actions__button modal__actions__button--red js-remove-task-confirm">Remove</button>
      </div>

    </div>
  </section>